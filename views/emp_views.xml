<!-- views/hr_employee_form_london.xml -->
<odoo>
    <record id="view_employee_london_list_with_import" model="ir.ui.view">
        <field name="name">employee.london.list.with_import</field>
        <field name="model">employee.london</field>
        <field name="inherit_id" ref="london_project.view_hr_employee_list_london"/>
        <field name="arch" type="xml">
        <xpath expr="//list" position="inside">
            <header>
            <button name="%(action_import_employee_wizard)d"
                    type="action"
                    string="Importar Excel Empleados"
                    class="oe_highlight"
                    display="always"/>
            </header>
        </xpath>
        </field>
    </record>

    <record id="view_hr_employee_form_london" model="ir.ui.view">
        <field name="name">employee.form.london.simple</field>
        <field name="model">employee.london</field>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <form string="Empleado (Proyecto)">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="role"/>
                            <field name="project_manager_id" domain="[('role', '=', 'pm')]"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_employee_list_london" model="ir.ui.view">
        <field name="name">employee.list.london.simple</field>
        <field name="model">employee.london</field>
        <field name="arch" type="xml">
            <list string="Empleado">
                <field name="name"/>
                <field name="role"/>
            </list>
        </field>
    </record>

    <record id="action_hr_employee_london" model="ir.actions.act_window">
        <field name="name">Empleados</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">employee.london</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
