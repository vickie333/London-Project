<odoo>
  <record id="view_project_date_range_wizard" model="ir.ui.view">
    <field name="name">project.date.range.wizard.form</field>
    <field name="model">project.date.range.wizard</field>
    <field name="arch" type="xml">
      <form string="Proyectos por rango de fecha fin">
        <sheet>
          <group>
            <field name="date_from"/>
            <field name="date_to"/>
          </group>
          <footer>
            <button name="action_open_projects" type="object" string="Ver proyectos" class="btn-primary"/>
            <button string="Cancelar" class="btn-secondary" special="cancel"/>
          </footer>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_project_date_range_wizard" model="ir.actions.act_window">
    <field name="name">Proyectos por fecha fin</field>
    <field name="res_model">project.date.range.wizard</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_project_date_range_wizard"/>
    <field name="target">new</field>
  </record>

</odoo>