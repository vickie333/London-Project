<odoo>
  <record id="import_employee_wizard_view_form" model="ir.ui.view">
    <field name="name">import.employee.wizard.view.form</field>
    <field name="model">import.employee.wizard</field>
    <field name="arch" type="xml">
      <form string="Importar Empleados">
        <sheet>
          <group>
            <field name="file" filename="file_name" />
          </group>
          <footer>
            <button string="Importar" type="object" name="action_import_file" class="btn-primary"/>
            <button string="Cancelar" class="btn-secondary" special="cancel"/>
          </footer>
        </sheet>
      </form>
    </field>
  </record>

  <record id="import_employee_wizard_action" model="ir.actions.act_window">
    <field name="name">Importar Empleados</field>
    <field name="res_model">import.employee.wizard</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="import_employee_wizard_view_form"/>
    <field name="target">new</field>
  </record>
</odoo>
