<odoo>
  <record id="project_employees_xlsx_wizard_view_form" model="ir.ui.view">
    <field name="name">project.employees.xlsx.wizard.view.form</field>
    <field name="name">project.employees.xlsx.wizard.form</field>
    <field name="model">project.employees.xlsx.wizard</field>
    <field name="arch" type="xml">
      <form string="Exportar Empleados a Excel" width="600">
        <sheet>
          <group>
            <field name="project_ids" widget="many2many_tags" />
          </group>
          <group>
            <field name="file_data" filename="file_name" readonly="1"/>
          </group>
          <footer>
            <button string="Generar" type="object" name="action_generate_xlsx" class="btn-primary"/>
            <button string="Cerrar" class="btn-secondary" special="cancel"/>
          </footer>
        </sheet>
      </form>
    </field>
  </record>

  <record id="project_employees_xlsx_wizard_action" model="ir.actions.act_window">
    <field name="name">Exportar Proyectos (XLSX)</field>
    <field name="res_model">project.employees.xlsx.wizard</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="project_employees_xlsx_wizard_view_form"/>
    <field name="target">new</field>
  </record>


</odoo>
